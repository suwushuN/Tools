<Window x:Class="wpfClearCodeDirecotries.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:wpfClearCodeDirecotries"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="30"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        <StackPanel Orientation="Horizontal">
            <TextBox x:Name="txtPath" Width="150"></TextBox>
            <Button Content="清理" Click="Button_Click"/>
        </StackPanel>
        <StackPanel Grid.Row="1">
            <TextBlock Text="结果列表"></TextBlock>
            <ListBox x:Name="resList"></ListBox>
        </StackPanel>
    </Grid>
</Window>
